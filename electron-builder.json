{
  "appId": "Starling.Desktop.App",
  "copyright": "Copyright Â© Starling LLC",
  "productName": "Starling Desktop",
  "directories": {
    "output": "release/"
  },
  "files": [
    "CHANGELOG.md",
    "engine",
    "dist",
    "icon",
    "main.js",
    "package.json",
    "!engine/**/*.js"
  ],
  "extraResources": [
    {
      "from": "./engine/workers",
      "to": "workers",
      "filter": "**/*"
    },
    {
      "from": "node_modules/bytenode",
      "to": "bytenode",
      "filter": "**/*"
    }
  ],
  "publish": {
    "provider": "github"
  },
  "win": {
    "icon": "dist",
    "target": [
      "NSIS"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ],
    "category": "System"
  },
  "mac": {
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "icon": "dist",
    "target": [
      "dmg",
      "zip"
    ]
  },
  "dmg": {
    "sign": false
  },
  "electronDownload": {
    "cache": ".cache"
  },
  "beforePack": "scripts/compile_engine.js",
  "afterSign": "scripts/notarize.js"
}